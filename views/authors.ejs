<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
     <script src="/js/authors.js" defer></script>

    <style>
        .author {
            width: 800px;
            height: 80px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            border-radius: 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;

            margin-bottom: 25px;
        }

        #buttons {
            padding-left: 25px;
        }

        #name {
            font-size: 25px;
            padding-right: 25px;
        }
        
        #confirm, #cancel {
            width: 100px;
        }

    </style>
</head>

<body>
    <%- include('partials/header') %>

        <div class="material">
            <h1>Update/Delete Authors</h1>


            <% for (let row of authors) {%>
                <div class="author">

                    <div id="buttons">
                        <a href="/updateAuthor?id=<%=row.authorId%>" id="update">Update</a>
                        <a class="delete" href="#" data-author-id="<%=row.authorId%>" id="delete">Delete</a>
                    </div>

                    <div id="name">
                        <%= row.firstName%>
                            <%= row.lastName%> <br>
                    </div>

                </div>
                <%}%>


                    <dialog id="deleteModal">
                        <form action="/deleteAuthor" method="post">
                            <p>Are you sure you want to delete this author?</p>
                            <input type="hidden" name="authorId" id="authorId">
                            <div id="modalBtns">
                                <button type="submit" id="confirm">Confirm</button>
                                <button id="cancel">Cancel</button>
                            </div>
                        </form>
                    </dialog>
        </div>
</body>

</html>